[Unit]
Description=ASHD Metrics Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /opt/ashd-agent/agent_fedora.py --server http://your-dashboard:8000 --interval 30
Restart=on-failure
RestartSec=10
User=ashd-agent
Group=ashd-agent
Environment=PYTHONUNBUFFERED=1

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/ashd-agent /var/log/ashd-agent

[Install]
WantedBy=multi-user.target
