# System Trace Configuration Example
# Copy this file to .env and customize for your environment

# Application
APP_VERSION=dev
HELP_URL=

# Metrics Collection
SAMPLE_INTERVAL_SECONDS=1.0
HISTORY_SECONDS=600
ANOMALY_WINDOW_SECONDS=120
ANOMALY_Z_THRESHOLD=3.0

# Database
METRICS_DB_PATH=data/metrics.db
SQLITE_RETENTION_SECONDS=86400

# Authentication (REQUIRED)
SESSION_SECRET_KEY=your-secret-key-here-change-this-in-production
SESSION_MAX_AGE_SECONDS=86400
SESSION_COOKIE_SECURE=0
SESSION_COOKIE_SAMESITE=strict
SESSION_COOKIE_NAME=system-trace_session

# Remember Me
REMEMBER_COOKIE_NAME=system-trace_remember
REMEMBER_MAX_AGE_SECONDS=604800

# Protocol Health Checks
PROTOCOL_CHECK_INTERVAL_SECONDS=30.0

# NTP Configuration
NTP_SERVER=pool.ntp.org
NTP_TIMEOUT_SECONDS=1.2

# ICMP Configuration  
ICMP_HOST=1.1.1.1
ICMP_TIMEOUT_SECONDS=1.0

# SNMP Configuration
# Set SNMP_HOST to enable SNMP monitoring
SNMP_HOST=localhost
SNMP_PORT=161
SNMP_COMMUNITY=public
SNMP_TIMEOUT_SECONDS=1.2

# NetFlow Collector
NETFLOW_PORT=2055
